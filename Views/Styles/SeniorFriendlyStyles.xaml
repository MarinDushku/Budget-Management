<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===========================================
         SENIOR-FRIENDLY COLOR SCHEME
         High contrast, clear colors, easy on the eyes
         =========================================== -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SummaryBackgroundBrush" Color="#F1F8FF"/>
    <SolidColorBrush x:Key="TabHeaderBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DialogHeaderBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="DialogFooterBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#E9ECEF"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="ErrorBorderBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="InfoBorderBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="SuccessBorderBrush" Color="#4CAF50"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212529"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="WhiteTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ErrorTextBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="InfoTextBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="SuccessTextBrush" Color="#388E3C"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#6C757D"/>
    <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="#5A6268"/>
    <SolidColorBrush x:Key="DangerButtonBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="DangerButtonHoverBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="SuccessButtonBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessButtonHoverBrush" Color="#388E3C"/>

    <!-- Summary Card Colors -->
    <SolidColorBrush x:Key="SummaryCardBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PositiveValueBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="NegativeValueBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="NeutralValueBrush" Color="#2196F3"/>

    <!-- Special Background Colors -->
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#FFEBEE"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#E8F5E8"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="LoadingOverlayBrush" Color="#80000000"/>

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="DataGridAlternatingRowBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="DataGridSelectedRowBrush" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="DataGridGridLinesBrush" Color="#E0E0E0"/>

    <!-- ===========================================
         LARGE BUTTON STYLES FOR SENIORS
         =========================================== -->

    <!-- Large Primary Button -->
    <Style x:Key="LargePrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="MinWidth" Value="140"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverBrush}"/>
                            <Setter Property="RenderTransform">
                                <TransformGroup>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                </TransformGroup>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#CCCCCC"/>
                            <Setter Property="Foreground" Value="#888888"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Large Secondary Button -->
    <Style x:Key="LargeSecondaryButton" TargetType="Button" BasedOn="{StaticResource LargePrimaryButton}">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SecondaryButtonHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Medium Secondary Button -->
    <Style x:Key="MediumSecondaryButton" TargetType="Button" BasedOn="{StaticResource LargeSecondaryButton}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Padding" Value="15,8"/>
    </Style>

    <!-- Small Action Button -->
    <Style x:Key="SmallActionButton" TargetType="Button" BasedOn="{StaticResource LargePrimaryButton}">
        <Setter Property="Height" Value="35"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="MinWidth" Value="70"/>
        <Setter Property="Padding" Value="12,6"/>
    </Style>

    <!-- Small Danger Button -->
    <Style x:Key="SmallDangerButton" TargetType="Button" BasedOn="{StaticResource SmallActionButton}">
        <Setter Property="Background" Value="{StaticResource DangerButtonBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource DangerButtonHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ===========================================
         TEXT INPUT STYLES FOR SENIORS
         =========================================== -->

    <!-- Large TextBox Style -->
    <Style x:Key="LargeTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource FocusBorderBrush}"/>
                            <Setter Property="BorderThickness" Value="3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Large Numeric TextBox Style -->
    <Style x:Key="LargeNumericTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource LargeTextBoxStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="FontFamily" Value="Consolas, Monaco, monospace"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Large ComboBox Style -->
    <Style x:Key="LargeComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0"
                                                  Margin="{TemplateBinding Padding}"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                                <ToggleButton Grid.Column="1"
                                              Width="40"
                                              Height="{TemplateBinding Height}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              Content="▼"
                                              FontSize="12"
                                              Foreground="{StaticResource SecondaryTextBrush}"/>
                            </Grid>
                        </Border>
                        <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                               Placement="Bottom"
                               MinWidth="{TemplateBinding ActualWidth}">
                            <Border Background="#FFFFFF"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    MaxHeight="200">
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource FocusBorderBrush}"/>
                            <Setter Property="BorderThickness" Value="3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Large DatePicker Style -->
    <Style x:Key="LargeDatePickerStyle" TargetType="DatePicker">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Width" Value="160"/>
    </Style>

    <!-- ===========================================
         DATAGRID STYLES FOR SENIORS
         =========================================== -->

    <!-- Senior-Friendly DataGrid Style -->
    <Style x:Key="SeniorFriendlyDataGridStyle" TargetType="DataGrid">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="RowHeight" Value="40"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Both"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource DataGridGridLinesBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource DataGridGridLinesBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource DataGridAlternatingRowBrush}"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="CanUserResizeColumns" Value="True"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="CanUserSortColumns" Value="True"/>
    </Style>

    <!-- Large DataGrid Header Style -->
    <Style x:Key="LargeDataGridHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource DataGridHeaderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Large DataGrid Cell Style -->
    <Style x:Key="LargeDataGridCellStyle" TargetType="DataGridCell">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridCell">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource DataGridSelectedRowBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Right-aligned DataGrid Cell Style -->
    <Style x:Key="LargeDataGridCellStyleRight" TargetType="DataGridCell" BasedOn="{StaticResource LargeDataGridCellStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="FontFamily" Value="Consolas, Monaco, monospace"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- ===========================================
         TAB CONTROL STYLES FOR SENIORS
         =========================================== -->

    <!-- Large Tab Control Style -->
    <Style x:Key="LargeTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- Large Tab Item Style -->
    <Style x:Key="LargeTabItemStyle" TargetType="TabItem">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="MinWidth" Value="180"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6,6,0,0"
                            Margin="2,0,2,0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFFFFF"/>
                            <Setter Property="BorderThickness" Value="1,1,1,0"/>
                            <Setter Property="Panel.ZIndex" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===========================================
         SUMMARY CARD STYLES
         =========================================== -->

    <!-- Summary Card Style -->
    <Style x:Key="SummaryCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SummaryCardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20,15"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Summary Header Text Style -->
    <Style x:Key="SummaryHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Summary Value Styles -->
    <Style x:Key="SummaryValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource NeutralValueBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Consolas, Monaco, monospace"/>
    </Style>

    <Style x:Key="SummaryValuePositiveStyle" TargetType="TextBlock" BasedOn="{StaticResource SummaryValueStyle}">
        <Setter Property="Foreground" Value="{StaticResource PositiveValueBrush}"/>
    </Style>

    <Style x:Key="SummaryValueNegativeStyle" TargetType="TextBlock" BasedOn="{StaticResource SummaryValueStyle}">
        <Setter Property="Foreground" Value="{StaticResource NegativeValueBrush}"/>
    </Style>

    <Style x:Key="SummaryValueRemainingStyle" TargetType="TextBlock" BasedOn="{StaticResource SummaryValueStyle}">
        <Setter Property="FontSize" Value="24"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RemainingBudget, Converter={StaticResource NumberToSignConverter}}" Value="Positive">
                <Setter Property="Foreground" Value="{StaticResource PositiveValueBrush}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding RemainingBudget, Converter={StaticResource NumberToSignConverter}}" Value="Negative">
                <Setter Property="Foreground" Value="{StaticResource NegativeValueBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- ===========================================
         PROGRESS BAR AND LOADING STYLES
         =========================================== -->

    <!-- Large Progress Bar Style -->
    <Style x:Key="LargeProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryButtonBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <!-- ===========================================
         SEPARATOR STYLES
         =========================================== -->

    <!-- Vertical Separator Style -->
    <Style x:Key="VerticalSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Width" Value="2"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="10,0"/>
    </Style>

</ResourceDictionary>
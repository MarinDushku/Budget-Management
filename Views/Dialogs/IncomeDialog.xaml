<Window x:Class="BudgetManagement.Views.Dialogs.IncomeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AddIncomeTitle}" 
        Height="420" Width="550"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        FontSize="16"
        Background="{DynamicResource BackgroundBrush}"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/ModernDesign.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Quick Amount Button Style -->
        <Style x:Key="QuickAmountButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButtonStyle}">
            <Setter Property="MinWidth" Value="55"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" 
                    CornerRadius="5" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource AddIncomeDialogTitle}" FontSize="22" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="{StaticResource AccentGreenBrush}"/>
                    <TextBlock Text="{DynamicResource AddIncomeDialogDescription}" FontSize="14" 
                               HorizontalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Date Field -->
            <TextBlock Grid.Row="1" Text="{DynamicResource Date}" Style="{StaticResource LabelStyle}"/>
            <DatePicker x:Name="DatePicker" Grid.Row="2" Margin="0,5,0,20" 
                        Style="{StaticResource ModernDatePickerStyle}"/>

            <!-- Description Field -->
            <TextBlock Grid.Row="3" Text="{DynamicResource Description}" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Margin="0,5,0,20"
                     Style="{StaticResource ModernTextBoxStyle}" MaxLength="200"
                     ToolTip="What is this income for? (e.g., 'Monthly Salary', 'Pension Payment')"/>

            <!-- Amount Field -->
            <TextBlock Grid.Row="5" Text="{DynamicResource Amount}" Style="{StaticResource LabelStyle}"/>
            <StackPanel Grid.Row="6" Orientation="Vertical" Margin="0,5,0,30">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="$" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" 
                               Margin="10,0,8,0" Foreground="{StaticResource AccentGreenBrush}"/>
                    <TextBox x:Name="AmountTextBox" Width="240" MinHeight="44" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="18" TextAlignment="Right"
                             PreviewTextInput="AmountTextBox_PreviewTextInput"
                             GotFocus="AmountTextBox_GotFocus"
                             LostFocus="AmountTextBox_LostFocus"
                             KeyDown="AmountTextBox_KeyDown"
                             ToolTip="Enter the dollar amount (e.g., 1500.00)"/>
                </StackPanel>
                
                <!-- Quick Amount Buttons -->
                <TextBlock Text="{DynamicResource QuickAmounts}" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="$50" Click="QuickAmount_Click" Tag="50" 
                            Style="{StaticResource QuickAmountButtonStyle}"/>
                    <Button Content="$100" Click="QuickAmount_Click" Tag="100" 
                            Style="{StaticResource QuickAmountButtonStyle}"/>
                    <Button Content="$250" Click="QuickAmount_Click" Tag="250" 
                            Style="{StaticResource QuickAmountButtonStyle}"/>
                    <Button Content="$500" Click="QuickAmount_Click" Tag="500" 
                            Style="{StaticResource QuickAmountButtonStyle}"/>
                    <Button Content="$1000" Click="QuickAmount_Click" Tag="1000" 
                            Style="{StaticResource QuickAmountButtonStyle}" MinWidth="60"/>
                </WrapPanel>
            </StackPanel>

            <!-- Buttons -->
            <Border Grid.Row="7" Background="{StaticResource SurfaceElevatedBrush}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" 
                    CornerRadius="5" Padding="15" Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{DynamicResource Cancel}" Click="CancelButton_Click" 
                            Style="{StaticResource ModernSecondaryButtonStyle}" Margin="0,0,15,0"/>
                    <Button Content="{DynamicResource Save}" Click="SaveButton_Click" 
                            Style="{StaticResource ModernSuccessButtonStyle}" MinWidth="140"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
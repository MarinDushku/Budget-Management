<Window x:Class="BudgetManagement.Views.Dialogs.SpendingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AddSpendingTitle}" 
        Height="520" Width="580"
        MinHeight="500" MinWidth="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        FontSize="16"
        Background="{DynamicResource BackgroundBrush}"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/ModernDesign.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="MinHeight" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Quick Amount Button Style for spending (uses warning colors) -->
        <Style x:Key="QuickAmountButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButtonStyle}">
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WarningOrangeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" 
                    CornerRadius="5" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource AddSpendingDialogTitle}" FontSize="22" FontWeight="Bold" 
                               HorizontalAlignment="Center" Foreground="{DynamicResource WarningOrangeBrush}"/>
                    <TextBlock Text="{DynamicResource AddSpendingDialogDescription}" FontSize="14" 
                               HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Date Field -->
            <TextBlock Grid.Row="1" Text="ðŸ“… Date:" Style="{StaticResource LabelStyle}"/>
            <DatePicker x:Name="DatePicker" Grid.Row="2" Margin="0,5,0,20" 
                        Style="{StaticResource ModernDatePickerStyle}"/>

            <!-- Category Field -->
            <TextBlock Grid.Row="3" Text="{DynamicResource Category}" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="CategoryComboBox" Grid.Row="4" Margin="0,5,0,15"
                      Style="{StaticResource ModernComboBoxStyle}" DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <!-- Category Help -->
            <Border Grid.Row="5" Background="{DynamicResource SurfaceElevatedBrush}" BorderBrush="{DynamicResource PrimaryBlueBrush}" BorderThickness="1" 
                    CornerRadius="5" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource CategoryGuideLabel}" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource PrimaryBlueBrush}"/>
                    <TextBlock FontSize="13" Foreground="{DynamicResource PrimaryBlueBrush}" TextWrapping="Wrap" Margin="0,5,0,0">
                        â€¢ Family: Groceries, utilities, house expenses
                        â€¢ Personal: Clothing, hobbies, entertainment  
                        â€¢ Marini: Special Marini-related expenses
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Description Field -->
            <TextBlock Grid.Row="6" Text="{DynamicResource Description}" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="DescriptionTextBox" Grid.Row="7" Margin="0,5,0,20"
                     Style="{StaticResource ModernTextBoxStyle}" MaxLength="200"
                     ToolTip="What did you spend money on? (e.g., 'Grocery shopping', 'Electric bill')"/>

            <!-- Amount Field -->
            <TextBlock Grid.Row="8" Text="{DynamicResource Amount}" Style="{StaticResource LabelStyle}"/>
            <StackPanel Grid.Row="9" Orientation="Vertical" Margin="0,5,0,30">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="$" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" 
                               Margin="10,0,8,0" Foreground="{DynamicResource WarningOrangeBrush}"/>
                    <TextBox x:Name="AmountTextBox" Width="240" MinHeight="44" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="18" TextAlignment="Right"
                             PreviewTextInput="AmountTextBox_PreviewTextInput"
                             GotFocus="AmountTextBox_GotFocus"
                             LostFocus="AmountTextBox_LostFocus"
                             KeyDown="AmountTextBox_KeyDown"
                             ToolTip="Enter the dollar amount (e.g., 125.50)"/>
                </StackPanel>
                
                <!-- Quick Amount Buttons -->
                <TextBlock Text="{DynamicResource QuickAmounts}" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="$10" Click="QuickAmount_Click" Tag="10" 
                            Style="{StaticResource QuickAmountButtonStyle}"/>
                    <Button Content="$25" Click="QuickAmount_Click" Tag="25" 
                            Style="{StaticResource QuickAmountButtonStyle}"/>
                    <Button Content="$50" Click="QuickAmount_Click" Tag="50" 
                            Style="{StaticResource QuickAmountButtonStyle}"/>
                    <Button Content="$100" Click="QuickAmount_Click" Tag="100" 
                            Style="{StaticResource QuickAmountButtonStyle}" MinWidth="55"/>
                    <Button Content="$200" Click="QuickAmount_Click" Tag="200" 
                            Style="{StaticResource QuickAmountButtonStyle}" MinWidth="55"/>
                </WrapPanel>
            </StackPanel>

            <!-- Buttons -->
            <Border Grid.Row="10" Background="{DynamicResource SurfaceElevatedBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" 
                    CornerRadius="5" Padding="15" Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{DynamicResource CancelButton}" Click="CancelButton_Click" 
                            Style="{StaticResource ModernSecondaryButtonStyle}" Margin="0,0,15,0"/>
                    <Button Content="{DynamicResource SaveSpending}" Click="SaveButton_Click" 
                            Style="{StaticResource ModernSuccessButtonStyle}" MinWidth="150"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
<Window x:Class="BudgetManagement.Views.Dialogs.CategoryManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BudgetManagement.Views.Dialogs"
        Title="Manage Spending Categories" 
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        FontSize="16"
        Background="{DynamicResource BackgroundBrush}"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/ModernDesign.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>
        
        <Style x:Key="CategoryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Effect" Value="{StaticResource ModernCardShadow}"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButtonStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernPrimaryButtonStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButtonStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernDangerButtonStyle}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Add New Section -->
            <RowDefinition Height="*"/>     <!-- Categories List -->
            <RowDefinition Height="Auto"/>  <!-- Action Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" 
                CornerRadius="6" Padding="20" Margin="0,0,0,25">
            <StackPanel>
                <TextBlock Text="{DynamicResource ManageSpendingCategoriesHeader}" Style="{StaticResource HeaderStyle}" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{DynamicResource ManageCategoriesDescription}" 
                           FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Add New Category Section -->
        <Border Grid.Row="1" Style="{StaticResource CategoryCardStyle}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="{DynamicResource AddNewCategoryHeader}" Style="{StaticResource SectionHeaderStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="NewCategoryNameTextBox" Grid.Column="0" 
                             FontSize="16" Padding="12,10" Margin="0,0,15,0" 
                             MinHeight="45" MaxLength="50"
                             ToolTip="Enter category name (e.g., 'Entertainment', 'Utilities')"
                             KeyDown="NewCategoryNameTextBox_KeyDown"/>
                             
                    <Button x:Name="AddCategoryButton" Grid.Column="1" Content="Add Category" 
                            Style="{StaticResource PrimaryButtonStyle}" MinWidth="120"
                            Click="AddCategoryButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Categories List -->
        <Border Grid.Row="2" Style="{StaticResource CategoryCardStyle}">
            <StackPanel>
                <TextBlock Text="{DynamicResource CurrentCategoriesHeader}" Style="{StaticResource SectionHeaderStyle}"/>
                <TextBlock Text="{DynamicResource CategoriesOrderDescription}" 
                           FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,15"/>
                
                <!-- Loading Indicator -->
                <Border Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                        Background="{DynamicResource SurfaceElevatedBrush}" 
                        Padding="20" Margin="0,0,0,10" CornerRadius="4">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="âŸ³" FontSize="16" Margin="0,0,10,0"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <RotateTransform/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock Text="Loading categories..." FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- No Categories Message -->
                <Border Visibility="{Binding Categories.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=invert}"
                        Background="{DynamicResource SurfaceElevatedBrush}" 
                        Padding="20" Margin="0,0,0,10" CornerRadius="4">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‚" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No categories found" FontSize="16" FontWeight="Medium" 
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Add your first category using the form above" FontSize="12" 
                                   Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Categories Display -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300"
                              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}">
                    <ListBox x:Name="CategoriesListBox" BorderThickness="0" Background="Transparent"
                             ItemsSource="{Binding Categories}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceElevatedBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" 
                                        CornerRadius="4" Padding="15" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>  <!-- Order -->
                                            <ColumnDefinition Width="*"/>     <!-- Name -->
                                            <ColumnDefinition Width="Auto"/>  <!-- Actions -->
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Display Order -->
                                        <Border Grid.Column="0" Background="{DynamicResource PrimaryBlueBrush}" CornerRadius="12" 
                                                Width="24" Height="24" Margin="0,0,15,0">
                                            <TextBlock Text="{Binding DisplayOrder}" Foreground="White" 
                                                       FontSize="12" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- Category Name -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Medium"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            <TextBlock Text="{Binding IsActive, Converter={StaticResource BooleanToStatusConverter}}" 
                                                       FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                        
                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Content="â†‘" Style="{StaticResource SecondaryButtonStyle}" 
                                                    ToolTip="Move Up" Width="35" Height="35"
                                                    Click="MoveUpButton_Click" CommandParameter="{Binding}"/>
                                            <Button Content="â†“" Style="{StaticResource SecondaryButtonStyle}" 
                                                    ToolTip="Move Down" Width="35" Height="35"
                                                    Click="MoveDownButton_Click" CommandParameter="{Binding}"/>
                                            <Button Content="âœï¸" Style="{StaticResource PrimaryButtonStyle}" 
                                                    ToolTip="Edit" Width="35" Height="35"
                                                    Click="EditButton_Click" CommandParameter="{Binding}"/>
                                            <Button Content="ðŸ—‘ï¸" Style="{StaticResource DangerButtonStyle}" 
                                                    ToolTip="Delete" Width="35" Height="35"
                                                    Click="DeleteButton_Click" CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceElevatedBrush}" BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1" 
                CornerRadius="6" Padding="20" Margin="0,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Status Message -->
                <Border Grid.Row="0" Margin="0,0,0,10" Padding="10" CornerRadius="4"
                        Background="{Binding HasError, Converter={StaticResource BooleanToStatusColorConverter}}"
                        Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="White" FontSize="12" TextWrapping="Wrap"/>
                </Border>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ”„ Reset to Default" Style="{StaticResource SecondaryButtonStyle}" 
                            Click="ResetToDefaultButton_Click" MinWidth="150" Margin="0,0,15,0"
                            ToolTip="Restore default categories (Family, Personal, Marini)"/>
                    <Button Content="âŒ Cancel" Style="{StaticResource SecondaryButtonStyle}" 
                            Click="CancelButton_Click" MinWidth="100" Margin="0,0,15,0"/>
                    <Button Content="âœ… Save Changes" Style="{StaticResource PrimaryButtonStyle}" 
                            Click="SaveButton_Click" MinWidth="130"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
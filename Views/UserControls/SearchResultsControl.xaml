<UserControl x:Class="BudgetManagement.Views.UserControls.SearchResultsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BudgetManagement.Converters">
    
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <!-- Search Result Item Styles -->
        <Style x:Key="SearchResultItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                      BlurRadius="4" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBlueBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- Pagination Controls Style -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernSecondaryButtonStyle}">
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CurrentPageButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernPrimaryButtonStyle}">
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <!-- Action Button Styles -->
        <Style x:Key="BaseActionButton" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditActionButton" TargetType="Button" BasedOn="{StaticResource BaseActionButton}">
            <Setter Property="Content" Value="&#xE70F;"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBlueBrush}"/>
            <Setter Property="ToolTip" Value="{DynamicResource EditEntry}"/>
        </Style>

        <Style x:Key="DeleteActionButton" TargetType="Button" BasedOn="{StaticResource BaseActionButton}">
            <Setter Property="Content" Value="&#xE74D;"/>
            <Setter Property="Foreground" Value="{DynamicResource DangerRedBrush}"/>
            <Setter Property="ToolTip" Value="{DynamicResource DeleteEntry}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Search Summary -->
            <RowDefinition Height="*"/>    <!-- Results List -->
            <RowDefinition Height="Auto"/> <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Search Summary Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceElevatedBrush}"
                BorderBrush="{DynamicResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12"
                Margin="0,0,0,16">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="&#xE71C;" 
                                   FontFamily="Segoe Fluent Icons" 
                                   FontSize="16"
                                   Foreground="{DynamicResource PrimaryBlueBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="{DynamicResource SearchResults}" 
                                   FontWeight="Medium"
                                   FontSize="16"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=":" 
                                   FontSize="16"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TotalResults}" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{DynamicResource PrimaryBlueBrush}"/>
                        <TextBlock Text="{DynamicResource EntriesFound}" 
                                   FontSize="16"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Sort Options -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource SortBy}" 
                                   FontSize="14"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <ComboBox x:Name="SortComboBox" 
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  MinWidth="120"
                                  SelectedItem="{Binding SelectedSortOption}"
                                  ItemsSource="{Binding SortOptions}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Grid>
                
                <!-- Search Filters Summary -->
                <StackPanel x:Name="FiltersSummary" 
                           Orientation="Horizontal" 
                           Margin="0,8,0,0"
                           Visibility="{Binding HasActiveFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{DynamicResource ActiveFilters}" 
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,8,0"/>
                    <ItemsControl ItemsSource="{Binding ActiveFilters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource PrimaryBlueBrush}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        Margin="0,0,4,0">
                                    <TextBlock Text="{Binding}" 
                                               FontSize="11"
                                               Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Results List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="0,0,8,0">
            <Grid>
                <!-- No Results Message -->
                <Border x:Name="NoResultsPanel"
                    Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderLightBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#xE71C;" 
                               FontFamily="Segoe Fluent Icons" 
                               FontSize="48"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="{DynamicResource NoResultsFound}" 
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="{DynamicResource TryDifferentFilters}" 
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Results List -->
            <ItemsControl x:Name="ResultsList" 
                          ItemsSource="{Binding SearchResults}"
                          Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Generic result template that works for both Income and Spending -->
                        <Border Style="{StaticResource SearchResultItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Description}" 
                                               FontWeight="Medium" 
                                               FontSize="16"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                                   FontSize="14"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        <!-- Category shown only for spending entries -->
                                        <TextBlock Text="•" 
                                                   FontSize="14"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   Margin="8,0"
                                                   Visibility="{Binding Category, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Category.Name}" 
                                                   FontSize="14"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   Visibility="{Binding Category, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Amount, StringFormat='€{0:F2}'}" 
                                           FontWeight="SemiBold" 
                                           FontSize="18"
                                           Foreground="{DynamicResource PrimaryBlueBrush}"
                                           VerticalAlignment="Center"
                                           Margin="16,0"/>
                                
                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="&#xE70F;" FontFamily="Segoe Fluent Icons"
                                            Style="{StaticResource EditActionButton}"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="{DynamicResource EditEntry}"
                                            Margin="4,0"/>
                                    <Button Content="&#xE74D;" FontFamily="Segoe Fluent Icons"
                                            Style="{StaticResource DeleteActionButton}"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="{DynamicResource DeleteEntry}"
                                            Margin="4,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Pagination Controls -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceElevatedBrush}"
                BorderBrush="{DynamicResource BorderLightBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12"
                Margin="0,16,0,0"
                Visibility="{Binding ShowPagination, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Results Info -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource Showing}" 
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding StartIndex}" 
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="4,0"/>
                    <TextBlock Text="-" 
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding EndIndex}" 
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="4,0"/>
                    <TextBlock Text="{DynamicResource Of}" 
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding TotalResults}" 
                               FontWeight="Medium"
                               FontSize="14"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                </StackPanel>
                
                <!-- Pagination Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    
                    <!-- First Page -->
                    <Button Content="&#xE972;" 
                            FontFamily="Segoe Fluent Icons"
                            Style="{StaticResource PaginationButtonStyle}"
                            Command="{Binding GoToFirstPageCommand}"
                            IsEnabled="{Binding CanGoToPreviousPage}"
                            ToolTip="{DynamicResource FirstPage}"/>
                    
                    <!-- Previous Page -->
                    <Button Content="&#xE70E;" 
                            FontFamily="Segoe Fluent Icons"
                            Style="{StaticResource PaginationButtonStyle}"
                            Command="{Binding GoToPreviousPageCommand}"
                            IsEnabled="{Binding CanGoToPreviousPage}"
                            ToolTip="{DynamicResource PreviousPage}"/>
                    
                    <!-- Page Numbers -->
                    <ItemsControl ItemsSource="{Binding PageNumbers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding PageNumber}"
                                        Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding PageNumber}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource PaginationButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrentPage}" Value="True">
                                                    <Setter Property="Style" Value="{StaticResource CurrentPageButtonStyle}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Next Page -->
                    <Button Content="&#xE70D;" 
                            FontFamily="Segoe Fluent Icons"
                            Style="{StaticResource PaginationButtonStyle}"
                            Command="{Binding GoToNextPageCommand}"
                            IsEnabled="{Binding CanGoToNextPage}"
                            ToolTip="{DynamicResource NextPage}"/>
                    
                    <!-- Last Page -->
                    <Button Content="&#xE971;" 
                            FontFamily="Segoe Fluent Icons"
                            Style="{StaticResource PaginationButtonStyle}"
                            Command="{Binding GoToLastPageCommand}"
                            IsEnabled="{Binding CanGoToNextPage}"
                            ToolTip="{DynamicResource LastPage}"/>
                </StackPanel>
                
                <!-- Page Size Options -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource ItemsPerPage}" 
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="PageSizeComboBox"
                              Style="{StaticResource ModernComboBoxStyle}"
                              MinWidth="60"
                              SelectedItem="{Binding PageSize}">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="25"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
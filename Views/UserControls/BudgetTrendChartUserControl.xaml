<UserControl x:Class="BudgetManagement.Views.UserControls.BudgetTrendChartUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             FontFamily="Segoe UI"
             FontSize="14">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chart Title -->
        <TextBlock Grid.Row="0" 
                   Text="Budget Trend (10 weeks)" 
                   FontWeight="Bold" 
                   FontSize="14" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Line Chart -->
        <oxy:PlotView Grid.Row="1" 
                      Model="{Binding LineChartModel}" 
                      Height="140"
                      Margin="0,5"/>

        <!-- Summary Statistics -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                        Background="#E8F5E8" 
                        CornerRadius="4" 
                        Padding="8,4" 
                        Margin="0,0,2,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Best Week" 
                                   FontSize="10" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding BestWeekAmount, StringFormat=C}" 
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" 
                        Background="#FFEBEE" 
                        CornerRadius="4" 
                        Padding="8,4" 
                        Margin="2,0,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Worst Week" 
                                   FontSize="10" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding WorstWeekAmount, StringFormat=C}" 
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#F44336"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Trend indicator -->
            <Border Background="#F0F8FF" 
                    CornerRadius="4" 
                    Padding="8,4" 
                    Margin="0,4,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="10-Week Trend" 
                               FontSize="10" 
                               Foreground="#666666"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TrendIndicator}" 
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="{Binding TrendColor}"/>
                        <TextBlock Text="{Binding TrendPercentage, StringFormat=P1}" 
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="{Binding TrendColor}"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
<UserControl x:Class="BudgetManagement.Views.UserControls.SpendingCategoryChartUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             FontFamily="Segoe UI"
             FontSize="14">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chart Title -->
        <TextBlock Grid.Row="0" 
                   Text="Spending by Category" 
                   FontWeight="Bold" 
                   FontSize="14" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Pie Chart -->
        <oxy:PlotView Grid.Row="1" 
                      Model="{Binding PieChartModel}" 
                      Height="180"
                      Margin="0,5"/>

        <!-- Legend/Summary -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Top Categories" 
                       FontWeight="SemiBold" 
                       FontSize="12" 
                       Margin="0,0,0,5"/>
            
            <ItemsControl ItemsSource="{Binding CategorySummaries}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#F8F9FA" 
                                CornerRadius="3" 
                                Padding="8,4" 
                                Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Color indicator -->
                                <Border Grid.Column="0" 
                                        Width="8" 
                                        Height="8" 
                                        Background="{Binding Color}"
                                        CornerRadius="4"
                                        VerticalAlignment="Center"
                                        Margin="0,0,6,0"/>
                                
                                <!-- Category name -->
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding CategoryName}" 
                                           FontSize="11"
                                           VerticalAlignment="Center"/>
                                
                                <!-- Amount -->
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Amount, StringFormat=C}" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="5,0"/>
                                
                                <!-- Percentage -->
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding Percentage, StringFormat=P1}" 
                                           FontSize="10"
                                           Foreground="#666666"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
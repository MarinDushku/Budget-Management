<UserControl x:Class="BudgetManagement.Views.UserControls.BudgetSummaryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BudgetManagement.Converters"
             FontFamily="Segoe UI"
             FontSize="16">

    <UserControl.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:NumberToSignConverter x:Key="NumberToSignConverter"/>
        
        <!-- Card style for senior-friendly design -->
        <Style x:Key="SummaryCard" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header text style -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Value text style -->
        <Style x:Key="CardValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Consolas, Monaco, monospace"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>

        <!-- Positive value style -->
        <Style x:Key="PositiveValue" TargetType="TextBlock" BasedOn="{StaticResource CardValue}">
            <Setter Property="Foreground" Value="#4CAF50"/>
        </Style>

        <!-- Negative value style -->
        <Style x:Key="NegativeValue" TargetType="TextBlock" BasedOn="{StaticResource CardValue}">
            <Setter Property="Foreground" Value="#F44336"/>
        </Style>

        <!-- Dynamic value style that changes based on number sign -->
        <Style x:Key="DynamicValue" TargetType="TextBlock" BasedOn="{StaticResource CardValue}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NumberToSignConverter}}" Value="Positive">
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NumberToSignConverter}}" Value="Negative">
                    <Setter Property="Foreground" Value="#F44336"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NumberToSignConverter}}" Value="Zero">
                    <Setter Property="Foreground" Value="#FF9800"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Icon style -->
        <Style x:Key="CardIcon" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Change indicator style -->
        <Style x:Key="ChangeIndicator" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource SummaryCard}">
        <StackPanel>
            <!-- Icon (if provided) -->
            <TextBlock x:Name="IconTextBlock"
                       Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Style="{StaticResource CardIcon}"
                       Visibility="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}"/>

            <!-- Header/Title -->
            <TextBlock x:Name="HeaderTextBlock"
                       Text="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Style="{StaticResource CardHeader}"/>

            <!-- Main Value -->
            <TextBlock x:Name="ValueTextBlock"
                       Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CurrencyConverter}}"
                       Style="{StaticResource DynamicValue}"/>

            <!-- Subtitle/Description (optional) -->
            <TextBlock x:Name="SubtitleTextBlock"
                       Text="{Binding Subtitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="12"
                       Foreground="#888888"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"
                       Visibility="{Binding Subtitle, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}"/>

            <!-- Change Indicator (optional) -->
            <TextBlock x:Name="ChangeTextBlock"
                       Text="{Binding ChangeText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Visibility="{Binding ChangeText, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource ChangeIndicator}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ChangeValue, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NumberToSignConverter}}" Value="Positive">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ChangeValue, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NumberToSignConverter}}" Value="Negative">
                                <Setter Property="Foreground" Value="#F44336"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Action Button (optional) -->
            <Button x:Name="ActionButton"
                    Content="{Binding ActionButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Command="{Binding ActionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Visibility="{Binding ActionButtonText, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}"
                    Style="{StaticResource MediumSecondaryButton}"
                    Margin="0,10,0,0"
                    Width="120"/>
        </StackPanel>
    </Border>
</UserControl>
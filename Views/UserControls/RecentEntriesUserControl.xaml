                                                                      HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                        </Border>
                                                        
                                                        <!-- Description -->
                                                        <StackPanel Grid.Column="1" 
                                                                   VerticalAlignment="Center" 
                                                                   Margin="12,0,12,0">
                                                            <TextBlock Text="{Binding Description}" 

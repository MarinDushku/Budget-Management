<UserControl x:Class="BudgetManagement.Views.UserControls.SpendingSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BudgetManagement.Converters"
             xmlns:userControls="clr-namespace:BudgetManagement.Views.UserControls"
             FontFamily="Segoe UI Variable, Segoe UI, Verdana, Tahoma, sans-serif"
             FontSize="16">

    <UserControl.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:DateConverter x:Key="DateConverter"/>
        
        <!-- Search Section Style -->
        <Style x:Key="SearchSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Filter Group Style -->
        <Style x:Key="FilterGroupStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>

        <!-- Filter Label Style -->
        <Style x:Key="FilterLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Search Button Style -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DangerRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clear Button Style -->
        <Style x:Key="ClearButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Preset Button Style -->
        <Style x:Key="PresetButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DangerRedBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Category Checkbox Style -->
        <Style x:Key="CategoryCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Search Header -->
            <TextBlock Text="{DynamicResource SearchSpendingEntries}" 
                       FontSize="24" FontWeight="SemiBold" 
                       Foreground="{StaticResource DangerRedBrush}"
                       Margin="0,0,0,24"/>

            <!-- Search Filters -->
            <Border Style="{StaticResource SearchSectionStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1: Description Search -->
                    <StackPanel Grid.Row="0" Style="{StaticResource FilterGroupStyle}" Margin="0,0,0,20">
                        <TextBlock Text="{DynamicResource SearchDescription}" Style="{StaticResource FilterLabelStyle}"/>
                        <TextBox x:Name="DescriptionTextBox" 
                                 Text="{Binding DescriptionFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MinHeight="40"
                                 FontSize="14">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </StackPanel>

                    <!-- Row 2: Date Range -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="{DynamicResource DateRange}" Style="{StaticResource FilterLabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="{DynamicResource FromDate}" FontSize="12" 
                                           Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                                <DatePicker x:Name="FromDatePicker" 
                                           SelectedDate="{Binding StartDate}"
                                           Style="{StaticResource ModernDatePickerStyle}"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="â€”" VerticalAlignment="Center" 
                                       FontSize="16" Margin="8,20,8,0"/>

                            <StackPanel Grid.Column="2" Margin="16,0,16,0">
                                <TextBlock Text="{DynamicResource ToDate}" FontSize="12" 
                                           Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                                <DatePicker x:Name="ToDatePicker" 
                                           SelectedDate="{Binding EndDate}"
                                           Style="{StaticResource ModernDatePickerStyle}"/>
                            </StackPanel>

                            <!-- Date Presets -->
                            <StackPanel Grid.Column="3" Margin="16,0,0,0">
                                <TextBlock Text="{DynamicResource DatePresets}" FontSize="12" 
                                           Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                                <WrapPanel Orientation="Vertical" MaxHeight="80">
                                    <Button Content="{DynamicResource ThisMonth}" Style="{StaticResource PresetButtonStyle}"
                                            Command="{Binding SetDatePresetCommand}" CommandParameter="ThisMonth"/>
                                    <Button Content="{DynamicResource LastMonth}" Style="{StaticResource PresetButtonStyle}"
                                            Command="{Binding SetDatePresetCommand}" CommandParameter="LastMonth"/>
                                    <Button Content="{DynamicResource Last3Months}" Style="{StaticResource PresetButtonStyle}"
                                            Command="{Binding SetDatePresetCommand}" CommandParameter="Last3Months"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Row 3: Amount Range -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="{DynamicResource AmountRange}" Style="{StaticResource FilterLabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="{DynamicResource MinAmount}" FontSize="12" 
                                           Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                                <TextBox x:Name="MinAmountTextBox" 
                                         Text="{Binding MinAmount, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         MinHeight="40"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="â€”" VerticalAlignment="Center" 
                                       FontSize="16" Margin="8"/>

                            <StackPanel Grid.Column="2" Margin="16,0,0,0">
                                <TextBlock Text="{DynamicResource MaxAmount}" FontSize="12" 
                                           Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                                <TextBox x:Name="MaxAmountTextBox" 
                                         Text="{Binding MaxAmount, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         MinHeight="40"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Row 4: Categories -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="{DynamicResource Categories}" 
                                       Style="{StaticResource FilterLabelStyle}" 
                                       VerticalAlignment="Top" Margin="0,0,16,8"/>
                            
                            <Border Grid.Column="1" 
                                    BorderBrush="{StaticResource BorderLightBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    MaxHeight="120" 
                                    Background="{StaticResource SurfaceElevatedBrush}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="12">
                                        <!-- Select All / None -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0" Content="{DynamicResource AllCategories}" 
                                                    Style="{StaticResource PresetButtonStyle}"
                                                    Command="{Binding SelectAllCategoriesCommand}"
                                                    HorizontalAlignment="Left"/>
                                            <Button Grid.Column="1" Content="{DynamicResource ClearAll}" 
                                                    Style="{StaticResource PresetButtonStyle}"
                                                    Command="{Binding ClearCategoriesCommand}"/>
                                        </Grid>
                                        
                                        <!-- Category Checkboxes -->
                                        <ItemsControl ItemsSource="{Binding AvailableCategories}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox Content="{Binding Name}" 
                                                              IsChecked="{Binding IsSelected}"
                                                              Style="{StaticResource CategoryCheckboxStyle}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Row 5: Sort Options and Buttons -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sort Options -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource SortBy}" Style="{StaticResource FilterLabelStyle}" 
                                       VerticalAlignment="Center" Margin="0,0,12,8"/>
                            <ComboBox x:Name="SortByComboBox" 
                                      SelectedValue="{Binding SortBy}"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      MinWidth="120" Margin="0,0,12,0">
                                <ComboBoxItem Content="{DynamicResource SortByDate}" Tag="Date"/>
                                <ComboBoxItem Content="{DynamicResource SortByAmount}" Tag="Amount"/>
                                <ComboBoxItem Content="{DynamicResource SortByDescription}" Tag="Description"/>
                                <ComboBoxItem Content="{DynamicResource SortByCategory}" Tag="Category"/>
                            </ComboBox>
                            <ComboBox x:Name="SortDirectionComboBox" 
                                      SelectedValue="{Binding SortDirection}"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      MinWidth="100">
                                <ComboBoxItem Content="{DynamicResource SortDescending}" Tag="Descending"/>
                                <ComboBoxItem Content="{DynamicResource SortAscending}" Tag="Ascending"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="{DynamicResource ClearAll}" 
                                    Style="{StaticResource ClearButtonStyle}"
                                    Command="{Binding ClearFiltersCommand}"
                                    Margin="0,0,12,0"/>
                            <Button Content="{DynamicResource Search}" 
                                    Style="{StaticResource SearchButtonStyle}"
                                    Command="{Binding SearchCommand}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Search Results Section -->
            <!-- Temporarily commented out until ViewModels are implemented -->
            <!-- <userControls:SearchResultsControl x:Name="SearchResultsControl" 
                                               DataContext="{Binding SearchResultsViewModel}"
                                               Visibility="{Binding HasSearched, Converter={StaticResource BooleanToVisibilityConverter}}"/> -->
        </StackPanel>
    </ScrollViewer>
</UserControl>
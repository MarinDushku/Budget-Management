<Window x:Class="BudgetManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        Title="Budget Management - Simple and Easy" 
        Height="900" Width="1400" 
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        FontFamily="Segoe UI"
        FontSize="16"
        Background="#F8F9FA"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Simple styles for testing -->
        <Style x:Key="LargeButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="45"/>
        </Style>
        
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        
        <Style x:Key="SummaryCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="SummaryValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸ’° Budget Manager" Style="{StaticResource HeaderText}" 
                   HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="âž• Add Income" Style="{StaticResource LargeButton}" 
                    Command="{Binding AddIncomeCommand}"/>
            <Button Content="ðŸ’¸ Add Spending" Style="{StaticResource LargeButton}" 
                    Command="{Binding AddSpendingCommand}"/>
            <Button Content="ðŸ”„ Refresh" Style="{StaticResource LargeButton}" 
                    Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <!-- Budget Summary -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Border Style="{StaticResource SummaryCard}">
                <StackPanel>
                    <TextBlock Text="Total Income" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="{Binding BudgetSummary.TotalIncome, StringFormat=C}" Style="{StaticResource SummaryValue}" Foreground="Green"/>
                </StackPanel>
            </Border>
            
            <Border Style="{StaticResource SummaryCard}">
                <StackPanel>
                    <TextBlock Text="Total Spending" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="{Binding BudgetSummary.TotalSpending, StringFormat=C}" Style="{StaticResource SummaryValue}" Foreground="Red"/>
                </StackPanel>
            </Border>
            
            <Border Style="{StaticResource SummaryCard}">
                <StackPanel>
                    <TextBlock Text="Remaining Budget" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="{Binding BudgetSummary.RemainingBudget, StringFormat=C}" Style="{StaticResource SummaryValue}" Foreground="Blue"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Status Bar -->
        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Background="#E8E8E8" Padding="10,5" 
                   HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
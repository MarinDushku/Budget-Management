                                <!-- Time Period Selection Setting -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{DynamicResource TimePeriod}" 
                                                   FontFamily="Segoe UI Variable, Segoe UI, Verdana, Tahoma, sans-serif"
                                                   FontSize="14" FontWeight="Medium"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   TextOptions.TextRenderingMode="ClearType"/>
                                        <TextBlock Text="Default time period for budget calculations and summary display" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   TextOptions.TextRenderingMode="ClearType"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Time Period ComboBox -->
                                    <ComboBox x:Name="TimePeriodComboBox" Grid.Column="1" 
                                              Style="{StaticResource ModernComboBoxStyle}"
                                              SelectedValue="{Binding SelectedTimePeriod, Mode=TwoWay, Converter={StaticResource TimePeriodToStringConverter}}"
                                              SelectedValuePath="Tag"
                                              MinWidth="140" Height="32"
                                              VerticalAlignment="Center"
                                              FontSize="14">
                                        <ComboBoxItem Content="{DynamicResource TimePeriodThisWeek}" Tag="ThisWeek"/>
                                        <ComboBoxItem Content="{DynamicResource TimePeriodTwoWeeks}" Tag="TwoWeeks"/>
                                        <ComboBoxItem Content="{DynamicResource TimePeriodThisMonth}" Tag="ThisMonth"/>
                                        <ComboBoxItem Content="{DynamicResource TimePeriodThreeMonths}" Tag="ThreeMonths"/>
                                        <ComboBoxItem Content="{DynamicResource TimePeriodSixMonths}" Tag="SixMonths"/>
                                        <ComboBoxItem Content="{DynamicResource TimePeriodOneYear}" Tag="OneYear"/>
                                        <ComboBoxItem Content="{DynamicResource TimePeriodFiveYears}" Tag="FiveYears"/>
                                        <ComboBoxItem Content="{DynamicResource TimePeriodAllTime}" Tag="AllTime" IsSelected="True"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                    </StackPanel>

                    <!-- Search Income Content (Hidden by default) -->
                    <StackPanel x:Name="SearchIncomeContent" Visibility="Collapsed">
                        <userControls:IncomeSearchControl DataContext="{Binding IncomeSearchViewModel}"/>
                    </StackPanel>

                    <!-- Search Spending Content (Hidden by default) -->
                    <StackPanel x:Name="SearchSpendingContent" Visibility="Collapsed">
                        <userControls:SpendingSearchControl DataContext="{Binding SpendingSearchViewModel}"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="{DynamicResource SurfaceElevatedBrush}" 
                    BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="0,1,0,0"
                    Padding="24,12">
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
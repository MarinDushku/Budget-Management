<Window x:Class="BudgetManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:userControls="clr-namespace:BudgetManagement.Views.UserControls"
        xmlns:converters="clr-namespace:BudgetManagement.Converters"
        Title="{DynamicResource AppFullTitle}" 
        Height="900" Width="1400" 
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        FontFamily="Segoe UI Variable, Segoe UI, Verdana, Tahoma, sans-serif"
        FontSize="16"
        Background="{DynamicResource BackgroundBrush}"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Temporarily removed style references to fix build issues -->
            <!-- <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/SeniorFriendlyStyles.xaml"/>
                <ResourceDictionary Source="/Views/Styles/SeniorUXEnhancements.xaml"/>
            </ResourceDictionary.MergedDictionaries> -->
        
        <!-- Converters -->
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        
        <!-- Modern styles using the design system -->
        <Style x:Key="LargeButton" TargetType="Button" BasedOn="{StaticResource ModernPrimaryButtonStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="50"/>
        </Style>
        
        <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource ModernHeaderTextStyle}">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Margin" Value="0,15,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <!-- Panel styles using modern design -->
        <Style x:Key="SidePanel" TargetType="Border" BasedOn="{StaticResource ModernSidePanelStyle}">
            <Setter Property="Margin" Value="8"/>
        </Style>
        
        <Style x:Key="PanelHeader" TargetType="TextBlock" BasedOn="{StaticResource SectionHeaderTextStyle}">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Style="{StaticResource MainContentContainerStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>  <!-- Navigation Sidebar -->
            <ColumnDefinition Width="*"/>     <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0" Style="{StaticResource NavigationRailStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- App Header in Navigation -->
                    <Border Background="{StaticResource HeaderGradientBrush}" Padding="16,20" Margin="0,0,0,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Logo -->
                            <Image Grid.Row="0" Source="../Resources/MD Logo.ico" Width="40" Height="40" 
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            
                            <!-- App Title -->
                            <TextBlock Grid.Row="1" Text="{DynamicResource AppTitle}" 
                                       FontFamily="Segoe UI Variable, Segoe UI, Verdana, Tahoma, sans-serif"
                                       FontSize="16" FontWeight="SemiBold" Foreground="White"
                                       HorizontalAlignment="Center" TextAlignment="Center"
                                       TextWrapping="Wrap" TextOptions.TextRenderingMode="ClearType"/>
                        </Grid>
                    </Border>

                    <!-- Main Navigation -->
                    <TextBlock Text="{DynamicResource MainSection}" Style="{StaticResource NavigationSectionHeaderStyle}"/>
                    
                    <Button x:Name="DashboardButton" Content="{DynamicResource Dashboard}" Tag="&#xE80F;" 
                            Style="{StaticResource SelectedNavigationItemStyle}"
                            Click="NavigationButton_Click"/>
                    
                    <Button x:Name="AnalyticsButton" Content="{DynamicResource Analytics}" Tag="&#xE9D2;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Click="NavigationButton_Click"/>

                    <!-- Quick Actions -->
                    <TextBlock Text="{DynamicResource ActionsSection}" Style="{StaticResource NavigationSectionHeaderStyle}"/>
                    
                    <Button Content="{DynamicResource AddIncomeButton}" Tag="&#xE8D4;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Command="{Binding AddIncomeCommand}"/>
                    
                    <Button Content="{DynamicResource AddSpendingButton}" Tag="&#xE7BF;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Command="{Binding AddSpendingCommand}"/>

                    <!-- Search -->
                    <TextBlock Text="{DynamicResource SearchSection}" Style="{StaticResource NavigationSectionHeaderStyle}"/>
                    
                    <Button x:Name="SearchIncomeButton" Content="{DynamicResource SearchIncome}" Tag="&#xE721;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Click="NavigationButton_Click"/>
                    
                    <Button x:Name="SearchSpendingButton" Content="{DynamicResource SearchSpending}" Tag="&#xE721;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Click="NavigationButton_Click"/>

                    <!-- Tools & Settings -->
                    <TextBlock Text="{DynamicResource ToolsSection}" Style="{StaticResource NavigationSectionHeaderStyle}"/>
                    
                    <Button x:Name="ExportButton" Content="Export &amp; Tools" Tag="&#xE898;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Click="NavigationButton_Click"/>
                    
                    <Button x:Name="SettingsButton" Content="Settings" Tag="&#xE713;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Click="NavigationButton_Click"/>
                    
                    <Button Content="Refresh Data" Tag="&#xE72C;" 
                            Style="{StaticResource NavigationItemStyle}"
                            Command="{Binding RefreshCommand}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="24,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Page Header -->
                <RowDefinition Height="*"/>     <!-- Page Content -->
                <RowDefinition Height="Auto"/>  <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- Page Header -->
            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1"
                    Padding="24,20" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="PageTitle" Text="Dashboard" 
                                   FontFamily="Segoe UI Variable, Segoe UI, Verdana, Tahoma, sans-serif"
                                   FontSize="32" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock x:Name="PageSubtitle" Text="Overview of your budget and recent activity" 
                                   FontSize="16" Foreground="{StaticResource SecondaryTextBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Page Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,0,24,24">
                <Grid>
                    <!-- Dashboard Content (Default View) -->
                    <StackPanel x:Name="DashboardContent">
                        <!-- Quick Stats Cards -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,32">
                        <userControls:BudgetSummaryCard 
                            Header="{StaticResource TotalIncome}"
                            Icon="&#xE8D4;"
                            Value="{Binding BudgetSummary.TotalIncome}"
                            Subtitle="{StaticResource ThisPeriod}"/>
                        
                        <userControls:BudgetSummaryCard 
                            Header="{StaticResource TotalSpending}"
                            Icon="&#xE7BF;"
                            Value="{Binding BudgetSummary.TotalSpending}"
                            Subtitle="{StaticResource AllCategories}"/>
                        
                        <userControls:BudgetSummaryCard 
                            Header="{StaticResource RemainingBudget}"
                            Icon="&#xE9D2;"
                            Value="{Binding BudgetSummary.RemainingBudget}"
                            Subtitle="{StaticResource Available}"/>
                        
                        <userControls:BudgetSummaryCard 
                            Header="Bank Statement"
                            Icon="&#xE8C7;"
                            Value="{Binding BankStatementSummary.RemainingBudget}"
                            Subtitle="{Binding BankStatementSummary.PeriodDescription}"/>
                    </StackPanel>

                    <!-- Recent Activity Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Recent Activity" Style="{StaticResource SectionHeaderTextStyle}"/>
                            <userControls:RecentEntriesUserControl 
                                RecentIncomeEntries="{Binding RecentIncomeEntries}"
                                RecentSpendingEntries="{Binding RecentSpendingEntries}"
                                HasNoEntries="{Binding HasNoRecentEntries}"/>
                        </StackPanel>
                    </Border>
                    </StackPanel>

                    <!-- Analytics Content (Hidden by default) -->
                    <StackPanel x:Name="AnalyticsContent" Visibility="Collapsed">
                    <!-- Analytics Charts -->
                    <UniformGrid Columns="2" Margin="0,0,0,24">
                        <!-- Spending Category Chart Card -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Spending by Category" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <userControls:SpendingCategoryChartUserControl 
                                    SpendingEntries="{Binding SpendingEntries}"/>
                            </StackPanel>
                        </Border>

                        <!-- Budget Trend Chart Card -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="12,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Budget Trends" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <userControls:BudgetTrendChartUserControl 
                                    BudgetTrendData="{Binding BudgetTrendData}"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                    
                    <!-- Budget Balance Chart Card (Full Width) -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Budget Balance Tracking (Last 30 Days)" Style="{StaticResource SectionHeaderTextStyle}"/>
                            <userControls:BudgetBalanceChartUserControl 
                                BudgetBalanceData="{Binding BudgetBalanceData}"/>
                        </StackPanel>
                    </Border>
                    </StackPanel>

                    <!-- Export & Tools Content (Hidden by default) -->
                    <StackPanel x:Name="ExportContent" Visibility="Collapsed">
                    <UniformGrid Columns="2">
                        <!-- Export Options Card -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Export Options" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <Button Content="{DynamicResource ExportToExcel}" 
                                        Style="{StaticResource ModernPrimaryButtonStyle}"
                                        Command="{Binding ExportDataCommand}"
                                        Margin="0,8,0,8"/>
                                <Button Content="{DynamicResource ExportToPDF}" 
                                        Style="{StaticResource ModernSecondaryButtonStyle}"
                                        IsEnabled="False" Margin="0,0,0,8"
                                        ToolTip="{StaticResource ComingSoon}"/>
                            </StackPanel>
                        </Border>

                        <!-- Category Management Card -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="12,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Category Management" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <TextBlock Text="Organize your spending categories" 
                                           FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" 
                                           Margin="0,0,0,16"/>
                                <Button Command="{Binding ManageCategoriesCommand}"
                                        Style="{StaticResource ModernSuccessButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE713;" FontFamily="Segoe Fluent Icons" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Manage Categories"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                    </StackPanel>

                    <!-- Settings Content (Hidden by default) -->
                    <StackPanel x:Name="SettingsContent" Visibility="Collapsed">
                    <!-- First Row: Theme and Language -->
                    <UniformGrid Columns="2" Margin="0,0,0,16">
                        <!-- Theme Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Appearance" Style="{StaticResource SectionHeaderTextStyle}"/>
                                
                                <!-- Dark Mode Toggle -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Dark Mode" 
                                                   FontFamily="Segoe UI Variable, Segoe UI, Verdana, Tahoma, sans-serif"
                                                   FontSize="14" FontWeight="Medium"
                                                   Foreground="{StaticResource PrimaryTextBrush}"
                                                   TextOptions.TextRenderingMode="ClearType"/>
                                        <TextBlock Text="Switch between light and dark themes" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource SecondaryTextBrush}"
                                                   TextOptions.TextRenderingMode="ClearType"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Modern Toggle Switch -->
                                    <ToggleButton x:Name="DarkModeToggle" Grid.Column="1" 
                                                  Click="DarkModeToggle_Click"
                                                  Width="48" Height="28" 
                                                  Background="{StaticResource BorderMediumBrush}"
                                                  BorderThickness="0" 
                                                  VerticalAlignment="Center">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="ToggleBackground" 
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="14" 
                                                        Width="48" Height="28">
                                                    <Border x:Name="ToggleThumb"
                                                            Width="20" Height="20"
                                                            Background="White"
                                                            CornerRadius="10"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Margin="4,0">
                                                        <Border.RenderTransform>
                                                            <TranslateTransform x:Name="ThumbTransform"/>
                                                        </Border.RenderTransform>
                                                    </Border>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                                                   Storyboard.TargetProperty="X"
                                                                                   To="20" Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="ToggleBackground"
                                                                                  Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                  To="#0078D4" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                                                   Storyboard.TargetProperty="X"
                                                                                   To="0" Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="ToggleBackground"
                                                                                  Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                  To="#C4C4C4" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                </Grid>
                                
                                <!-- Theme Selection -->
                                <TextBlock Text="Theme:" FontWeight="Medium" Margin="0,0,0,8"/>
                                <ComboBox x:Name="ThemeComboBox" Style="{StaticResource ModernComboBoxStyle}"
                                          SelectionChanged="ThemeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Light" Tag="Light"/>
                                    <ComboBoxItem Content="Dark" Tag="Dark"/>
                                    <ComboBoxItem Content="Auto (System)" Tag="Auto"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>
                        
                        <!-- Language Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="12,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Language" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <ComboBox x:Name="LanguageComboBox" Style="{StaticResource ModernComboBoxStyle}">
                                    <ComboBoxItem Content="{DynamicResource English}" Tag="en"/>
                                    <ComboBoxItem Content="{DynamicResource Albanian}" Tag="sq"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Second Row: Accessibility -->
                    <UniformGrid Columns="1">
                        <!-- Accessibility Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Accessibility" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <CheckBox x:Name="HighContrastCheckBox" Content="High Contrast Mode" 
                                          Margin="0,0,0,16"
                                          Checked="HighContrastCheckBox_Checked"
                                          Unchecked="HighContrastCheckBox_Unchecked"/>
                                
                                <TextBlock Text="Font Size:" FontWeight="Medium" Margin="0,0,0,8"/>
                                <UniformGrid Columns="3">
                                    <Button x:Name="FontSizeSmallBtn" Content="A" FontSize="12"
                                            Click="FontSizeSmall_Click" Style="{StaticResource ModernSecondaryButtonStyle}"
                                            ToolTip="Small font size" Margin="0,0,4,0"/>
                                    <Button x:Name="FontSizeMediumBtn" Content="A" FontSize="16"
                                            Click="FontSizeMedium_Click" Style="{StaticResource ModernSecondaryButtonStyle}"
                                            ToolTip="Medium font size" Margin="2,0"/>
                                    <Button x:Name="FontSizeLargeBtn" Content="A" FontSize="20"
                                            Click="FontSizeLarge_Click" Style="{StaticResource ModernSecondaryButtonStyle}"
                                            ToolTip="Large font size" Margin="4,0,0,0"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Third Row: Budget Settings -->
                    <UniformGrid Columns="1" Margin="0,16,0,0">
                        <!-- Budget Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Budget Settings" Style="{StaticResource SectionHeaderTextStyle}"/>
                                
                                <!-- Bank Statement Day Setting -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Bank Statement Day" 
                                                   FontFamily="Segoe UI Variable, Segoe UI, Verdana, Tahoma, sans-serif"
                                                   FontSize="14" FontWeight="Medium"
                                                   Foreground="{StaticResource PrimaryTextBrush}"
                                                   TextOptions.TextRenderingMode="ClearType"/>
                                        <TextBlock Text="Day of the month when your bank statement is generated (1-31)" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource SecondaryTextBrush}"
                                                   TextOptions.TextRenderingMode="ClearType"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Numeric Input for Statement Day -->
                                    <TextBox x:Name="BankStatementDayTextBox" Grid.Column="1" 
                                             Width="60" Height="32"
                                             VerticalAlignment="Center"
                                             HorizontalContentAlignment="Center"
                                             FontSize="14" FontWeight="Medium"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             MaxLength="2"
                                             LostFocus="BankStatementDayTextBox_LostFocus"
                                             PreviewTextInput="BankStatementDayTextBox_PreviewTextInput"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                    </StackPanel>

                    <!-- Search Income Content (Hidden by default) -->
                    <StackPanel x:Name="SearchIncomeContent" Visibility="Collapsed">
                        <userControls:IncomeSearchControl DataContext="{Binding IncomeSearchViewModel}"/>
                    </StackPanel>

                    <!-- Search Spending Content (Hidden by default) -->
                    <StackPanel x:Name="SearchSpendingContent" Visibility="Collapsed">
                        <userControls:SpendingSearchControl DataContext="{Binding SpendingSearchViewModel}"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="{StaticResource SurfaceElevatedBrush}" 
                    BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0"
                    Padding="24,12">
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
            </Border>
        </Grid>
    </Grid>
</Window>